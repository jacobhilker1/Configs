#articlelist-format "%3>%4i %2>%f %D %3>%t"
datetime-format "%d %b"


# -- keybindings  ---------------------------------------------------------------
unbind-key j
unbind-key k
unbind-key J
unbind-key K

unbind-key C feedlist

unbind-key a
unbind-key A

bind-key A mark-all-feeds-read
bind-key a mark-feed-read

bind-key j down feedlist
bind-key k up feedlist
bind-key l open
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down article
bind-key k up article
bind-key L toggle-show-read-feeds

# ONLY UNCOMMENT IF YOU WANT SPACE INSTEAD OF COMMA AS MACRO
## unbind-key ,
## unbind-key SPACE
## bind-key SPACE macro-prefix

bind-key N next
bind-key P prev

unbind-key o
bind-key U show-urls
bind-key o show-urls

# -- bookmarks -----------------------------------------------------------------

bookmark-cmd ~/.newsbeuter/bookmark.sh
bookmark-interactive no
bookmark-autopilot yes




# -- colors ------------------------------------------------------------------


color info blue black bold 
color listnormal default default
color listfocus default default bold underline 
color listnormal_unread yellow default 
color listfocus_unread default default underline
color article default default




