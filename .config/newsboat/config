# -- feeds ---------------------------------------------------------------------
auto-reload yes
max-items 100



# -- display ------------------------------------------------------------------

show-read-feeds yes
show-read-articles no
text-width 80

# -- navigation & browser ----------------------------------------------------

goto-next-feed no
external-url-viewer "urlview"

# -- ui ----------------------------------------------------------------------
feedlist-format "%?T?║%4i %4U %n (%T) %t &╠═════════════════════════════════════════════════════%t?"

# Dj-Bauer's Format
##feedlist-format "%?T?║%4i %n %8u (%T) %t &╠═════════════════════════════════════════════════════%t?"


