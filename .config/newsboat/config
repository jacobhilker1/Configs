# -- sorts ----------------------------------------------------------------------
article-sort-order date-asc

# -- macros ---------------------------------------------------------------------  
macro i set browser "feh %u"; open-in-browser ; set browser "elinks %u"

macro m set browser "mpv --force-window=immediate %u "; open-in-browser ; set browser "xdg-open %u"



